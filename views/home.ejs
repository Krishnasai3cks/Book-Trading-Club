<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <title>Book Trading Club</title>
    <style>
        #books-container {
            width: 90%;
        }
        
        form {
            width: 100%;
        }
        
        .elements {
            width: 100%;
            display: flex;
        }
        
        .intro {
            width: 100%;
            height: 30px;
            background-color: rgb(240, 232, 232);
            text-align: center;
        }
    </style>
</head>

<body>
    <%- include ('navbar.ejs') %>
        <div id="books-container">
            <div class="intro">
                <span style="font-size:x-large;font-weight: bold;">Books</span><span>&nbsp;available for trade</span>
            </div>
            <form method="post" action="/requests/new">
                <%- include('listbooks.ejs') %>
                <!--

                paste here if any mistake 
                
                -->
                        <% if(typeof name=='undefined'){ %>
                            <a href="/login">Login to create requests</a>
                            <% } else { %>
                                <input type="submit" value="New Request">
                                <a href="/books/new">New Book</a>
                                <% } %>
            </form>
        </div>
        <script src="public/client.js"></script>
</body>

</html>